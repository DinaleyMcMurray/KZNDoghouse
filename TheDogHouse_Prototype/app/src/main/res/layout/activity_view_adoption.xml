<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/LightBrown"
    tools:context=".ViewAdoptionActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adoption"
                android:textAlignment="center"
                android:typeface="serif"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/border"
                android:layout_width="391dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_horizontal">

                <!-- Image on the left -->
                <ImageView
                    android:id="@+id/imageView_dog1"
                    android:layout_width="165dp"
                    android:layout_height="217dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/dog1" />

                <!-- Card with text on the right -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/LightBrown"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dog Name"
                            android:textSize="16sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breed"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vaccinated"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not sterilized"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/adoptButton1"
                                android:layout_width="141dp"
                                android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/bonebutton" />

                            <TextView
                                android:layout_width="128dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:text="   Adopt Me"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </FrameLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_horizontal">

                <!-- Image on the left -->
                <ImageView
                    android:id="@+id/imageView_dog2"
                    android:layout_width="165dp"
                    android:layout_height="217dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/dog2" />

                <!-- Card with text on the right -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/LightBrown"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dog Name"
                            android:textSize="16sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breed"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vaccinated"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not sterilized"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/adoptButton2"
                                android:layout_width="141dp"
                                android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/bonebutton" />

                            <TextView
                                android:layout_width="128dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:text="   Adopt Me"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_horizontal">

                <!-- Image on the left -->
                <ImageView
                    android:id="@+id/imageView_dog3"
                    android:layout_width="165dp"
                    android:layout_height="217dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/dog3" />

                <!-- Card with text on the right -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/LightBrown"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dog Name"
                            android:textSize="16sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breed"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vaccinated"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not sterilized"
                            android:textSize="14sp"
                            android:typeface="serif" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/adoptButton3"
                                android:layout_width="141dp"
                                android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/bonebutton" />

                            <TextView
                                android:layout_width="128dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:text="   Adopt Me"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>