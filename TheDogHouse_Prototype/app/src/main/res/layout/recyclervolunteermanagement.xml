<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Volunteer Name -->
            <TextView
                android:id="@+id/textVolunteerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <!-- Volunteer Sex -->
            <TextView
                android:id="@+id/textSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_sex"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <!-- Volunteer Age -->
            <TextView
                android:id="@+id/textAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_age"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <!-- Volunteer Hours -->
            <TextView
                android:id="@+id/textHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_hours"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <!-- Volunteer Contact -->
            <TextView
                android:id="@+id/textVolunteerNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_contact_number"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <!-- Volunteer Email -->
            <TextView
                android:id="@+id/textVolunteerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_email"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <!-- Download Button -->
            <Button
                android:id="@+id/btnDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_download_documents"
                android:backgroundTint="@color/Green"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
