<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/DonorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Donor: N/A" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount: R0" />

        <TextView
            android:id="@+id/dateSubmitted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Submitted: N/A" />

        <TextView
            android:id="@+id/dropOffDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: N/A" />

        <TextView
            android:id="@+id/dropOffTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Funds" />

        <TextView
            android:id="@+id/Timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>