<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FundsDonationsActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Brown"
            app:title="THE KZN DOGHOUSE"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@android:drawable/ic_menu_sort_by_size" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/LightBrown"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Heading -->
                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kindly Donate"
                    android:textAlignment="center"
                    android:typeface="serif"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp" />

                <!-- Navigation Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/FundsBtn"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:textSize="13sp"
                        android:backgroundTint="@color/pink"
                        android:textColor="@color/black"
                        android:text="Funds" />

                    <Button
                        android:id="@+id/DogFoodBtn"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:textSize="13sp"
                        android:backgroundTint="@color/ButtonColour"
                        android:textColor="@color/black"
                        android:text="Food" />

                    <Button
                        android:id="@+id/MedsBtn"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:textSize="13sp"
                        android:backgroundTint="@color/ButtonColour"
                        android:textColor="@color/black"
                        android:text="Meds" />
                </LinearLayout>

                <!-- Subheading -->
                <TextView
                    android:id="@+id/subheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FUNDS DONATION"
                    android:textAlignment="center"
                    android:typeface="serif"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp" />


                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    app:srcCompat="@drawable/fundsdonation" />

                <!-- Donation Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:backgroundTint="@color/Lightpurple"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/subheading2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please enter an amount for our records and then make the payment using PayPal or EFT."
                            android:textAlignment="center"
                            android:typeface="serif"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginVertical="15dp" />

                        <!-- Preset Amount Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:weightSum="3">

                            <Button
                                android:id="@+id/buttonR100"
                                android:layout_width="150dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:layout_margin="4dp"
                                android:textSize="13sp"
                                android:backgroundTint="@color/LightGreen"
                                android:textColor="@color/black"
                                android:text="R100" />

                            <Button
                                android:id="@+id/buttonR500"
                                android:layout_width="150dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:layout_margin="4dp"
                                android:textSize="13sp"
                                android:backgroundTint="@color/LightGreen"
                                android:textColor="@color/black"
                                android:text="R500" />

                            <Button
                                android:id="@+id/buttonR1000"
                                android:layout_width="150dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:layout_margin="4dp"
                                android:textSize="13sp"
                                android:backgroundTint="@color/LightGreen"
                                android:textColor="@color/black"
                                android:text="R1000" />
                        </LinearLayout>

                        <!-- Custom Amount -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="15dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/editAmount"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_weight="2"
                                android:hint="Other Amount"
                                android:padding="8dp"
                                android:inputType="numberDecimal"
                                android:backgroundTint="@color/purple"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/enterAmountBtn"
                                android:layout_width="150dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="8dp"
                                android:textSize="13sp"
                                android:backgroundTint="@color/purple"
                                android:textColor="@color/black"
                                android:text="SUBMIT" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- PayPal Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:layout_marginBottom="12dp"
                            android:text="1. Pay with PayPal" />

                        <ImageView
                            android:id="@+id/btnPayPal"
                            android:layout_width="100dp"
                            android:layout_height="74dp"
                            android:layout_marginBottom="4dp"
                            android:contentDescription="PayPal Icon"
                            app:srcCompat="@drawable/paypal" />

                        <TextView
                            android:id="@+id/linkPayPal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click here to donate via PayPal"
                            android:textColor="@color/purple"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- EFT Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:paddingBottom="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:layout_marginBottom="12dp"
                            android:text="2. Pay with Bank Transfer (EFT)" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Name: The KZN Doghouse NPO"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank: First National Bank (FNB)"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Number: 62891260045"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reference: [Your Name]"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="WhatsApp proof of payment to: +27 (71) 929-6457"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu_user" />

</androidx.drawerlayout.widget.DrawerLayout>


