<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/LightBrown"
    android:id="@+id/main"
    tools:context=".FundsDonationsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Heading -->
            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kindly Donate"
                android:textAlignment="center"
                android:typeface="serif"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/FundsBtn"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/pink"
                    android:textColor="@color/black"
                    android:text="Funds" />

                <Button
                    android:id="@+id/DogFoodBtn"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/ButtonColour"
                    android:textColor="@color/black"
                    android:text="Dog Food" />

                <Button
                    android:id="@+id/MedsBtn"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/ButtonColour"
                    android:textColor="@color/black"
                    android:text="Medication" />
            </LinearLayout>

            <!-- Subheading -->
            <TextView
                android:id="@+id/subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Funds Donation"
                android:textAlignment="center"
                android:typeface="serif"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <!-- Input Fields -->
            <EditText
                android:id="@+id/DonorNameFunds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Donor Full Name"
                android:padding="12dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/black"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/DonationAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Donation Amount"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/black"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/PaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Payment Method (PayPal, Visa, EFT)"
                android:padding="12dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/black"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/ReferenceNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reference Number"
                android:padding="12dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/black"
                android:layout_marginTop="12dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/SubmitFundsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/LightGreen"
                android:text="Submit Donation"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
