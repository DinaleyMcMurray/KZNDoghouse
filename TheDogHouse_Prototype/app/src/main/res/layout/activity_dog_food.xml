                <TextView
                    android:id="@+id/mission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOG FOOD DONATION"
                    android:textAlignment="center"
                    android:typeface="serif"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/dogfood" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:backgroundTint="@color/Lightpurple"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:backgroundTint="@color/Lightpurple"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/textDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:typeface="serif"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:text="Please fill out the following" />

                        <EditText
                            android:id="@+id/DonorName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Name of donor"
                            android:padding="8dp"
                            android:backgroundTint="@color/purple"
                            android:textColor="@color/black"
                            android:typeface="serif" />

                        <EditText
                            android:id="@+id/DogFoodName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Dog food type or name"
                            android:padding="8dp"
                            android:backgroundTint="@color/purple"
                            android:textColor="@color/black"
                            android:typeface="serif" />

                        <EditText
                            android:id="@+id/editTextDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/purple"
                            android:ems="10"
                            android:hint="Date of drop off (Click to select)"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />

                        <EditText
                            android:id="@+id/editTextTime2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Time of drop off (Click to select)"
                            android:backgroundTint="@color/purple"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/purple"
                            android:text="SUBMIT"
                            android:layout_marginTop="24dp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:typeface="serif"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="25dp"
                            android:text="Where to find us" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="271dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/address" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:typeface="serif"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="25dp"
                            android:text="80 Carrick Rd, Queensburgh, Durban, 4093" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu_user" />

</androidx.drawerlayout.widget.DrawerLayout>