<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".RegisterActivity">

        <!-- Main content -->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="@android:color/transparent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:backgroundTint="@color/LightBrown">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/RegisterText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Your Account"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:typeface="serif"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/register"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/profile_image_desc" />

                    <!-- Input fields -->
                    <EditText
                        android:id="@+id/etRegName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Name"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/etRegEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Email"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Age"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/etRegContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Contact Number"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/etRegPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Create Password"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/etRegConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Register"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:typeface="serif"
                        android:backgroundTint="@color/ButtonColour"
                        app:cornerRadius="20dp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sign-in Button below card -->
            <Button
                android:id="@+id/signinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Already registered? Sign In Now"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:typeface="serif"
                android:backgroundTint="@color/SecondaryBtnColour" />
        </LinearLayout>
</ScrollView>
