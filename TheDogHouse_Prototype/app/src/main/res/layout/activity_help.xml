<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar for Drawer Toggle -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Brown"
            app:title="THE KZN DOGHOUSE"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@android:drawable/ic_menu_sort_by_size" />

        <!-- Scrollable Help Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/LightBrown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textAlignment="center"
                    android:typeface="serif"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <!-- Your CardViews exactly as before -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- First Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/LightGreen"
                            android:padding="24dp">

                            <TextView
                                android:id="@+id/helpContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="4dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="• You can adopt or sponsor a dog. 🐶 "
                                android:padding="15dp" />

                            <TextView
                                android:id="@+id/helpContent2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="4dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="• You can also donate food, medicine, or funds to support them. 💊 "
                                android:padding="15dp" />

                            <TextView
                                android:id="@+id/helpContent3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="4dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="• To move around the app, tap the menu (☰) icon at the top of your screen."
                                android:padding="15dp" />

                            <TextView
                                android:id="@+id/helpContent4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="4dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="• A side panel will open with icons and labels for each feature."
                                android:padding="15dp" />

                            <TextView
                                android:id="@+id/helpContent5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="4dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="• Tap any icon to go directly to that page."
                                android:padding="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Second Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/Lightpurple"
                            android:padding="24dp">

                            <TextView
                                android:id="@+id/mission"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:text="Please click the button below to contact a manager."
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                            <Button
                                android:id="@+id/btnContactManager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/ButtonColour"
                                android:textColor="@color/black"
                                android:text="Contact a manager" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- NAV DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu_user" />

</androidx.drawerlayout.widget.DrawerLayout>
